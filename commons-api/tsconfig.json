{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "outDir": "./bin/v1",
    "rootDir": "./src/v1",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/v1/@types"], 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/v1"
  ],
  "exclude": [
    "node_modules"
  ]
}